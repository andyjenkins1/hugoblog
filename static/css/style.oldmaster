/* üé® Scroll to Top Button (Refined) */
.scroll-to-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 40px; /* ‚úÖ Smaller button */
    height: 40px; /* ‚úÖ Smaller button */
    background-color: var(--primary-color);
    color: var(--background-color);
    border: none;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 18px; /* ‚úÖ Slightly smaller arrow */
    cursor: pointer;
    opacity: 0.3; /* ‚úÖ More transparent by default */
    visibility: hidden;
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out, transform 0.3s ease-in-out;
}

.scroll-to-top:hover {
    opacity: 0.8; /* ‚úÖ Less transparent on hover */
    transform: scale(1.1);
}

.scroll-to-top.show {
    opacity: 0.6; /* ‚úÖ More transparent when active */
    visibility: visible;
}