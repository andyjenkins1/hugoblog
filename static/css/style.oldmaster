/* ‚úÖ Disable transitions during page load */
.no-transition * {
    transition: none !important;
}

/* ===========================================================
   üé® Blowfish-Inspired Color Palette (Accurate Blues)
=========================================================== */
:root {
    --background-color: #0a192f; /* Dark navy blue */
    --foreground-color: #ffffff; /* White text */
    --primary-color: #64ffda; /* Cyan accent */
    --secondary-color: #8892b0; /* Muted steel blue */
    --highlight-color: #00d1ff; /* Brighter cyan for highlights */
    --border-color: #233554; /* Darker blue border */
    --button-bg: #112240; /* Deep blue for buttons */
    --button-text: #ffffff; /* White text on buttons */
}

/* ===========================================================
   üé® Blowfish-Inspired Light Mode (White Background)
=========================================================== */
[data-theme="light"] {
    --background-color: #ffffff; /* White background */
    --foreground-color: #1e1e1e; /* Black text */
    --primary-color: #007acc; /* Blue accent */
    --secondary-color: #555; /* Dark gray for subtle text */
    --highlight-color: #0056b3; /* Darker blue for links */
    --border-color: #ddd; /* Light gray borders */
    --button-bg: #f0f0f0; /* Light gray buttons */
    --button-text: #1e1e1e; /* Dark text on buttons */
}

/* ===========================================================
   üåç Global Styles
=========================================================== */

/* ‚úÖ Reset browser default styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* ‚úÖ Update Global Font to Inter */
body {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: var(--foreground-color);
    background-color: var(--background-color);
    line-height: 1.6;
    padding: 20px;
    transition: background-color 0.5s ease-in-out, color 0.5s ease-in-out;
}

/* ‚úÖ Headings */
h1, h2, h3, h4, h5, h6 {
    font-weight: bold;
    color: var(--primary-color);
    margin-bottom: 10px;
}

h1 {
    font-size: 2rem;
    border-bottom: 2px solid var(--border-color);
    padding-bottom: 10px;
}

h2 {
    font-size: 1.75rem;
}

h3 {
    font-size: 1.5rem;
}

/* ‚úÖ Links */
a {
    color: var(--highlight-color);
    text-decoration: none;
    font-weight: bold;
}

a:hover {
    text-decoration: underline;
    color: var(--primary-color);
}

/* ‚úÖ Buttons */
button, .btn {
    display: inline-block;
    background-color: var(--button-bg);
    color: var(--button-text);
    padding: 10px 15px;
    border: 1px solid var(--border-color);
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background 0.3s ease-in-out;
}

button:hover, .btn:hover {
    background-color: var(--primary-color);
    color: var(--background-color);
}

/* ===========================================================
   üè† Navigation Bar
=========================================================== */
/* üé® Sticky Navigation Bar */
nav {
    background-color: var(--button-bg);
    padding: 15px;
    display: flex;
    justify-content: flex-end;
    position: fixed; /* Ensure it stays at the top */
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000; /* Keep it above other content */
}

nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
}

nav ul li {
    margin-left: 20px;
}

nav ul li a {
    color: var(--foreground-color);
    text-decoration: none;
    font-weight: bold;
    font-size: 16px;
    padding: 8px 12px;
    border-radius: 4px;
    transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
}

nav ul li a:hover {
    background-color: var(--primary-color);
    color: var(--background-color);
}

/* ‚úÖ Add space below navigation to prevent content from being hidden */
body {
    padding-top: 60px; /* Adjust if needed based on navbar height */
}

/* üé® Theme Toggle Button (With Font Awesome) */
.theme-toggle {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    padding: 5px 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.3s ease-in-out;
}

/* Smooth rotation + fade effect for icons */
.theme-toggle i {
    display: inline-block;
    transition: transform 0.6s ease-in-out, opacity 0.5s ease-in-out;
}

/* Rotate and fade out when switching themes */
.theme-toggle.rotating i {
    transform: rotate(360deg) scale(1.5);
    opacity: 0;
}

/* ‚úÖ Apply transitions only to key elements */
body, nav, .blog-post, .theme-toggle {
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
}

/* ===========================================================
   üìù Blog Post Styling
=========================================================== */

/* üìù Typography for Blog Posts Only */
.blog-post {
    font-family: 'Raleway', sans-serif;   /* ‚úÖ Body Font */
    font-size: 1rem;
    line-height: 1.8;
    color: var(--foreground-color);
    letter-spacing: 0.02em;
    padding: 20px;
}

/* üéØ Headings Inside Blog Posts */
.blog-post h1,
.blog-post h2,
.blog-post h3,
.blog-post h4,
.blog-post h5,
.blog-post h6 {
    font-family: 'Lato', sans-serif;  
    font-weight: 700;
    margin-bottom: 10px;
    line-height: 1.4;
    margin-left: 0;              /* ‚úÖ Ensures headings stay left-aligned */
    padding-left: 0;
}

.blog-post h1 {
    font-size: 1.8rem;
    margin-top: 20px;
}

.blog-post h2 {
    font-size: 1.5rem;
    margin-top: 30px;
}

.blog-post h3 {
    font-size: 1.3rem;
    margin-top: 20px;
}

/* ‚úÖ Body Text with Indentation */
.blog-post p,
.blog-post ol,
.blog-post ul {
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.2rem;
    font-weight: 400;

    margin-left: 20px;           /* ‚úÖ Indents body text */
    padding-left: 10px;          /* Optional: adds slight inner padding */
}

/* ‚úÖ Indentation for Code Blocks in Blog Posts */
.blog-post pre {
    margin-left: 20px;           /* ‚úÖ Matches paragraph indentation */
    padding-left: 10px;          /* Optional: adds inner padding */
    background-color: #f5f5f5;   /* Light background for contrast */
    border-left: 4px solid var(--primary-color); /* Optional: colored border */
    border-radius: 4px;
    overflow-x: auto;            /* Allows horizontal scroll for long code */
    padding: 15px;
    font-family: 'Fira Code', monospace; /* Monospace font for code */
    font-size: 0.9rem;
    line-height: 1.6;
}

/* ‚úÖ Inline Code Styling */
.blog-post code {
    background-color: rgba(255, 255, 255, 0.1); 
    color: #93c5fd; 
    padding: 2px 6px;
    border-radius: 4px;
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
}

/* ‚úÖ Consistent List Styling */
.blog-post ol,
.blog-post ul {
    list-style-position: outside;  /* Keeps bullets/numbers outside the indent */
    margin-left: 30px;             /* Adjust this for desired indentation */
    padding-left: 15px;
}

.blog-post li {
    margin-bottom: 8px;            /* Adds spacing between list items */
    line-height: 1.6;
}

/* üìã Blockquotes in Blog Posts */
.blog-post blockquote {
    border-left: 4px solid var(--primary-color);
    padding-left: 15px;
    font-style: italic;
    color: #555;
    background: rgba(0, 0, 0, 0.05);
    padding: 10px 15px;
    border-radius: 4px;
    margin: 20px 0;
}

/* ‚úÖ Responsive Adjustments */
@media (max-width: 768px) {
    .blog-post h1 {
        font-size: 2rem;
    }

    .blog-post h2 {
        font-size: 1.6rem;
    }

    .blog-post p {
        font-size: 0.95rem;
    }
}

/* üé® Code Block Styling with Line Numbers */
.post-content pre {
    background: linear-gradient(135deg, #1e293b, #0f172a);  /* Gradient background */
    color: #e2e8f0;  /* Softer white for text */
    padding: 20px;
    overflow-x: auto;
    border-radius: 10px;
    font-family: 'Fira Code', 'Source Code Pro', monospace;  /* Modern monospace font */
    font-size: 0.95rem;
    line-height: 1.6;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    margin: 20px 0;
    position: relative;  /* For adding optional line numbers */
}

/* ‚úÖ Inline Code Styling */
.post-content code {
    background-color: rgba(255, 255, 255, 0.1);  /* Slight transparency */
    color: #93c5fd;  /* Light blue */
    padding: 2px 6px;
    border-radius: 4px;
    font-family: 'Fira Code', 'Source Code Pro', monospace;
    font-size: 0.9rem;
    white-space: pre-wrap;  /* Wraps inline code if too long */
}

/* ‚úÖ Line Numbers (Optional) */
pre.line-numbers {
    counter-reset: linenumber;
    padding-left: 3.5em;  /* Space for line numbers */
}

pre.line-numbers code {
    position: relative;
    display: block;
    padding-left: 1em;  /* Adjust to create spacing */
}

pre.line-numbers code::before {
    counter-increment: linenumber;
    content: counter(linenumber);
    position: absolute;
    left: -2.5em;
    color: #64748b;
    text-align: right;
    padding-right: 10px;
    user-select: none;  /* Prevent line numbers from being selectable */
    font-size: 0.9rem;
}

/* ‚úÖ Scrollbar Styling */
pre::-webkit-scrollbar {
    height: 8px;
}

pre::-webkit-scrollbar-thumb {
    background-color: #334155;
    border-radius: 4px;
}

pre::-webkit-scrollbar-thumb:hover {
    background-color: #475569;
}

/* Images */
.post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 20px 0;
}

/* Blockquotes */
.post-content blockquote {
    border-left: 4px solid var(--primary-color);
    padding-left: 15px;
    margin: 20px 0;
    font-style: italic;
    color: #555;
    background-color: #f9f9f9;
    padding: 15px;
    border-radius: 4px;
}

/* üè∑Ô∏è Tag Styling */
.post-tags {
    margin-bottom: 10px;  /* Adds space between tags and the title */
    display: flex;
    gap: 8px;             /* Adds space between individual tags */
}

.tag {
    background-color: var(--primary-color);
    color: var(--background-color);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: bold;
    transition: background 0.3s ease-in-out;
}

.tag:hover {
    background-color: var(--highlight-color);
}

/* Responsive Design */
@media (max-width: 768px) {
    .post-title {
        font-size: 1.8rem;
    }

    .post-content h2 {
        font-size: 1.5rem;
    }

    .post-content h3 {
        font-size: 1.3rem;
    }
}
